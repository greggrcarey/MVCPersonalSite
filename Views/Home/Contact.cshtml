@model MvcPersonalSite.Models.ContactData
@{
    ViewBag.Title = "Contact";
}



<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<!-- Place this tag after the last widget tag. -->
<script type="text/javascript">
  (function() {
    var po = document.createElement('script'); po.type = 'text/javascript'; po.async = true;
    po.src = 'https://apis.google.com/js/plusone.js';
    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(po, s);
  })();
</script>
<div class="email">
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)

        <h1>Thanks for stopping by. Let's stay in touch.</h1>
        <br />

        <div class="emailEdit">
            <div>
                <span class="emailL">@Html.LabelFor(model => model.Name)</span>
                @Html.EditorFor(model => model.Name)
            </div>
            @Html.ValidationMessageFor(model => model.Name)

            <div>
                <span class="emailL">@Html.LabelFor(model => model.Email)</span>
                @Html.EditorFor(model => model.Email)
            </div>
            @Html.ValidationMessageFor(model => model.Email)

            <div>
                <span class="emailL">@Html.LabelFor(model => model.Comments)</span>
                @Html.EditorFor(model => model.Comments)
            </div>
            @Html.ValidationMessageFor(model => model.Comments)

            <span class="btnSubmit">
            <input type="submit" value="Send Mail" /></span>


        </div>
    }
        <div class="social">

<a href="http://www.linkedin.com/in/greggrcarey"><img src="http://www.linkedin.com/img/webpromo/btn_viewmy_160x33.png" width="160" height="33" border="0" alt="View Gregory Carey's profile on LinkedIn"></a>
            <br />
            <!-- Place this tag where you want the widget to render. -->
<div class="g-person" data-width="287" data-href="https://plus.google.com/110195406878938538274" data-theme="dark" data-layout="landscape" data-rel="author"></div>


    </div>
    <div style="clear:both"></div>
   



</div>





